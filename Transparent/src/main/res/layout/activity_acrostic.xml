<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AcrosticActivity">
    <FrameLayout
        android:id="@+id/acrostic_framelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/android_title_bg">
        <TextView
            android:id="@+id/acrostic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/acrostic_title"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/miniAdLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acrostic_framelayout"
        tools:ignore="Orientation" />
    <RelativeLayout
        android:id="@+id/acrostic_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/miniAdLinearLayout"
        android:layout_above="@+id/appOffersButton"
        tools:ignore="UseCompoundDrawables" >
        <EditText
            android:id="@+id/acrostic_words_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/acrostic_words_hint"
            android:theme="@style/EditTheme"
            android:inputType="text">
            <requestFocus />
        </EditText>
        <Spinner
            android:id="@+id/acrostic_num_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acrostic_words_edt"
            android:entries="@array/nums"/>
        <Spinner
            android:id="@+id/acrostic_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acrostic_words_edt"
            android:layout_toRightOf="@+id/acrostic_num_spinner"
            android:entries="@array/types"/>
        <Spinner
            android:id="@+id/acrostic_yayuntype_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acrostic_words_edt"
            android:layout_toRightOf="@+id/acrostic_type_spinner"
            android:entries="@array/yayuntypes"/>
        <Button
            android:id="@+id/acrostic_create_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acrostic_yayuntype_spinner"
            android:text="@string/acrostic_create_btn"/>
        <ProgressBar
            android:id="@+id/acrostic_query_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/red"
            android:layout_below="@+id/acrostic_create_btn"
            android:visibility="gone"/>
        <ScrollView
            android:id="@+id/acrostic_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acrostic_create_btn"
            android:layout_marginTop="0dp"
            android:scrollbars="none">
            <TextView
                android:id="@+id/acrostic_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/acrostic_baike"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </ScrollView>
    </RelativeLayout>
    <Button
        android:id="@+id/appOffersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/appOffersButton"/>
</RelativeLayout>