    <pxgd.hyena.com.circularimage.VImageButtonView
        android:id="@+id/pic1"
        android:layout_width="62dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="false"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/women_2"
        android:text=""
        android:textColor="#f0f"
        android:textSize="10sp"
        app:imagePadding="1dp"
        app:overlay="#000000"
        app:overlayAlpha="0.4"
        app:textPadding="15dp"/>

    <pxgd.hyena.com.circularimage.VImageButtonView
        android:id="@+id/pic2"
        android:layout_width="62dp"
        android:layout_height="110dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/pic1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/button"
        android:text=""
        android:textColor="#f0f"
        android:textSize="13sp"
        app:imagePadding="20dp"
        app:overlay="#000000"
        app:overlayAlpha="0.4"
        app:textPadding="15dp"/>

    <pxgd.hyena.com.circularimage.VImageButtonView
        android:id="@+id/pic3"
        android:layout_width="62dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/pic2"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/button"
        android:text="Demo App"
        android:textColor="#f0f"
        android:textSize="13sp"
        app:imagePadding="20dp"
        app:overlay="#000000"
        app:overlayAlpha="0.4"
        app:textPadding="15dp"/>
